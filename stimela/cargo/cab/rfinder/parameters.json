{
    "task": "rfinder",
    "base": "stimela/rfinder",
    "tag": "1.0.1",
    "description": "A tool to investigate the presence of RFI",
    "prefix": "--",
    "binary": "rfinder",
    "msdir": true,
    "parameters": [
        {
            "info": "Name of telescope",
            "dtype": "str",
            "default": "meerkat",
            "name": "telescope"
        }, 
        {
            "info": "Name of input ms file",
            "dtype": "str",
            "io": "msfile",
            "default": null,
            "name": "msname"
        }, 
        {
            "info": "Field ID of target of file",
            "dtype": "int",
            "default": null,
            "name": "field"
        }, 
        {
            "info": "Path to ms file directory",
            "dtype": "str",
            "default": null,
            "name": "msdir",
            "mapping": "workdir"
        }, 
        {
            "info": "Path to output directory",
            "dtype": "str",
            "default": null,
            "name": "output",
            "mapping": "outdir"
        }, 
        {
            "info": "Enable to find RFI in msfile over threshold",
            "dtype": "bool",
            "default": null,
            "name": "rfi-enable",
            "mapping": "rfi_enable"
        },
        {
            "info": "RFInder mode",
            "dtype": "str",
            "default": "rms_clip",
            "name": "mode",
            "mapping": "RFInder_mode"
        }, 
        {
            "info": "List of bad antennas. default `[]` e.g. '[1,2]' ",
            "dtype": "str",
            "default": null,
            "name": "bad-antenna",
            "mapping": "bad_antenna"
        }, 
        {
            "info": "Polarization to examine. xx, yy, xy, yx, q (also in CAPS)",
            "dtype": "str",
            "default": "XX",
            "name": "polarization"
        }, 
        {
            "info": "Threshold for RFI identification",
            "dtype": "int",
            "default": 5,
            "name": "rms-clip",
            "mapping": "rms_clip"
        }, 
        {
            "info": "Min and Max frequency where to measure average std of visibilities",
            "dtype": "list:float",
            "default": null
            "name": "noise-measure-edges",
            "mapping": "noise_measure_edges"
        }, 
        {
            "info": "Cutoff baseline lenght: <  = Short, > = Long",
            "dtype": "int",
            "default": 200,
            "name": "baseline-cut",
            "mapping": "baseline_cut"
        },
        {
            "info": "Enable time chunking",
            "dtype": "bool",
            "default": null,
            "name": "time-enable",
            "mapping": "time_enable"
        },
        {
            "info": "Time chunks in minutes",
            "dtype": "int",
            "default": 10,
            "name": "time-step",
            "mapping": "time_step"
        },
        {
            "info": "Enable spw for rebinning",
            "dtype": "bool",
            "default": null,
            "name": "spw-enable",
            "mapping": "spw_enable"
        },
        {
            "info": "Channel width of rebinned output table [MHz]",
            "dtype": "int",
            "default": 20,
            "name": "spw-width",
            "mapping": "spw_width"
        },
        {
            "info": "Enable estimation of the beam shape aster RFI flagging",
            "dtype": "bool",
            "default": null,
            "name": "beam-shape-enable",
            "mapping": "beam_shape_enable"
        },
        {
            "info": "Enable output plotting",
            "dtype": "bool",
            "default": null,
            "name": "plot_enable",
            "mapping": "plot_enable"
        },
        {
            "info": "Choose to plot % of RFI, 'rfi', or noise, 'noise', or factor of noise increase, 'noise_factor' in 1D plots",
            "dtype": "str",
            "default": null,
            "name": "plot-noise",
            "mapping": "plot_noise"
        },
        {
            "info": "Plot all baselines, or only the short and the long movies:",
            "dtype": "bool",
            "default": null,
            "name": "plot-long-short",
            "mapping": "plot_long_short"
        },
        {
            "info": "Make 1-D movie plots (gif)",
            "dtype": "bool",
            "default": null,
            "name": "1d-gif",
            "mapping": "1d_gif"
        },
        {
            "info": "Make 2-D movie plots (gif)",
            "dtype": "bool",
            "default": null,
            "name": "2d-gif",
            "mapping": "2d_gif"
        },
        {
            "info": "Make Alt-AZ plots",
            "dtype": "bool",
            "default": null,
            "name": "altaz-gif",
            "mapping": "altaz_gif"
        },
        {
            "info": "Generate movies in a report",
            "dtype": "bool",
            "default": null,
            "name": "report",
            "mapping": "movies_in_report"
        }
    ]
}
